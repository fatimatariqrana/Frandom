<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border2">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="500dp"
                android:background="@color/whis2"
                android:layout_height="30dp"
                android:textColorHint="@color/white"
                android:paddingLeft="0dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:textColorHighlight="@color/whis2"
                android:textSize="17dp"

                android:shadowColor="@color/whis2"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.Second"
                />

            <ImageView
                android:id="@+id/postImageView"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop" />

            <com.fat.mah.CircularImageView
                android:id="@+id/authorImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_alignTop="@+id/postImageView"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="138dp"
                app:border="true"
                app:shadow="true"
                app:border_color="@color/whis2"
                app:border_width="3dp"

                app:shadow_radius="3dp"
                app:shadow_color="@color/circle_image_shadow" />




            <TextView
                android:id="@+id/detailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_below="@+id/postImageView"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="6dp"
                android:layout_alignParentEnd="true" />

            <include
                android:id="@+id/countersContainer"
                layout="@layout/counters_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsTextView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
