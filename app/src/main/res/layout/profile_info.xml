<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:background="@drawable/border2">


    <TextView
        android:id="@+id/likesCountersTextView"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:padding="4dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postsCounterTextView"
        app:layout_constraintTop_toTopOf="@+id/postsCounterTextView"
        tools:text="25 \n likes"
        android:background="@color/whis2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/postsCounterTextView"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:background="@color/whis2"
        tools:text="25 \n posts"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/chat"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/chat_p"
        android:gravity="center"
        android:padding="4dp"
        android:text="Chat"></ImageButton>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Posts"
        android:textColor="#d3d3d3"
        android:background="@color/whis2"
        android:id="@+id/myPosts"
        android:textStyle="bold"

        ></Button>



    <TextView
        android:id="@+id/nameEditText"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="13dp"
        android:padding="0dp"
        android:textColor="@color/whis2"
        android:paddingTop="10dp"

        android:layout_below="@+id/imageContainer"
        android:textAppearance="@style/TextAppearance.Large"

        tools:text="fatima"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/imageContainer"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <com.fat.mah.CircularImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="302dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:transitionName="@string/post_author_image_transition_name"
            app:border="true"
            app:border_width="2dp"
            app:border_color="@color/whis2"
            tools:src="@drawable/ic_stub"
            tools:targetApi="lollipop" />

    </RelativeLayout>

</RelativeLayout>